{
  "rust-analyzer.linkedProjects": [
    "./wireframe-app/src-tauri/Cargo.toml"
  ],
  "editor.formatOnSave": true,
  "editor.defaultFormatter": "rust-lang.rust-analyzer",
  "editor.formatOnPaste": true,
  // --- TypeScript固有のフォーマット設定 ---
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit"
  },
  "[typescript]": {
    "editor.defaultFormatter": "vscode.typescript-language-features",
    "editor.tabSize": 2
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "vscode.typescript-language-features",
    "editor.tabSize": 2
  },
  // --- TypeScriptの細かな整形ルール ---
  "typescript.format.semicolons": "insert", // セミコロンを強制（"remove"なら削除）
  "typescript.format.insertSpaceAfterCommaDelimiter": true, // カンマの後にスペース
  "typescript.format.insertSpaceBeforeAndAfterBinaryOperators": true, // 演算子の前後にスペース
  // --- CSS固有のフォーマット設定 ---
  "[css]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true,
    "editor.tabSize": 2
  },
  // todo-treeのタグ設定
  "todo-tree.general.tags": [
    "BUG",
    "HACK",
    "FIXME",
    "TODO",
    "XXX",
    "[ ]",
    "[x]",
    "NOTE"
  ],
  "[jsonc]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  }
}